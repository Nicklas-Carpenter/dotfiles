" Automatically use indentation level from previous line.
set autoindent

" Format settings
set tabstop=8 		" Tab defaults to 8 spaces.
colorscheme default 	" Use default color scheme.
syntax on 		" Enable syntax highlighting.
set nocompatible 	" Turn off vi compatibility.
set nu 			" Use line numbering.
" set cindent 		" Automatically indent lines in C
set hlsearch 		" Highlight search results
set nowrap 		" Disable line warpping

" Mouse settings
set mouse=a 		" Enable mouse usage for all modes 
set mousehide

" Copy and paste settings
set paste

" Other settings
set ruler

" Set the color scheme
colorscheme desert 
hi! Normal cterm=NONE ctermbg=NONE
